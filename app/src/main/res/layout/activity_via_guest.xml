<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:paddingTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/editdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:text="Select departue date:" />

            <TextView
                android:id="@+id/mDisplayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="50"
                android:hint="mm/dd/yyyy" />

        </LinearLayout>

        <Button
            android:id="@+id/khi_to_skr"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_round"
            android:text="KHI_TO_SKR"
            android:enabled="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/khi_to_lhr"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_round"
            android:text="KHI_TO_LHR"
            android:enabled="false"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent" />

        <Button
            android:id="@+id/kh_to_isl"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_round"
            android:text="KHI_TO_ISL"
            android:enabled="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/skr_to_khi"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_round"
            android:text="SKR_TO_KHI"
            android:enabled="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/skr_to_lhr"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_round"
            android:text="SKR_TO_LHR"
            android:enabled="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/skr_to_isl"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_round"
            android:text="SKR_TO_ISL"
            android:enabled="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/lhr_to_khi"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_round"
            android:text="LHR_TO_KHI"
            android:enabled="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/lhr_to_skr"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_round"
            android:text="LHR_TO_SKR"
            android:enabled="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/lhr_to_isl"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_round"
            android:text="LHR_TO_ISL"
            android:enabled="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/isl_to_khi"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_round"
            android:text="ISL_TO_KHI"
            android:enabled="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/isl_to_skr"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_round"
            android:text="ISL_TO_SKR"
            android:enabled="false"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/isl_to_lhr"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/button_round"
            android:text="ISL_TO_LHR"
            android:enabled="false"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>